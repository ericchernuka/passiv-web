{
  "name": "passiv-web",
  "version": "0.1.0",
  "description": "The main website for Passiv",
  "keywords": ["passiv", "investing"],
  "homepage": "https://getpassiv.com",
  "license": "MIT",
  "author": {
    "name": "Mike Cousins",
    "email": "mike@mikecousins.com",
    "url": "https://www.mikecousins.com"
  },
  "repository": "github:passiv/passiv-web",
  "dependencies": {
    "connected-react-router": "4.4.1",
    "formik": "1.2.0",
    "react": "16.5.0",
    "react-dom": "16.5.0",
    "react-redux": "5.0.7",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-scripts": "1.1.5",
    "react-simple-pie-chart": "0.5.0",
    "redux": "4.0.0",
    "redux-devtools-extension": "2.13.5",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.3.0"
  },
  "scripts": {
    "build:css": "npm run build:css:tailwind && npm run build:css:normalize && npm run purgecss",
    "build:css:tailwind": "postcss src/styles/tailwind.src.css -o src/tailwind.css",
    "build:css:normalize": "postcss src/styles/normalize.src.css -o src/normalize.css",
    "watch:css": "npm run watch:css:tailwind && npm run watch:css:normalize",
    "watch:css:tailwind": "postcss src/styles/tailwind.src.css -o src/tailwind.css -w",
    "watch:css:normalize": "postcss src/styles/normalize.src.css -o src/normalize.css -w",
    "purgecss": "purgecss -c purgecss.config.js -o src",
    "start": "concurrently \"npm run watch:css\" \"react-scripts start\"",
    "build": "npm run build:css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.0",
    "concurrently": "4.0.1",
    "glob-all": "3.1.0",
    "postcss-cli": "^6.0.0",
    "purgecss": "1.1.0",
    "purgecss-webpack-plugin": "1.3.0",
    "tailwindcss": "^0.6.4"
  }
}
